<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorApp1</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Roles="Dentist,Manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dentistapp">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Display List of Dentists
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Receptionist,Manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="patients">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Display List of Patients
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Dentist">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dentistpage">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Dentist Page
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Patient">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="patientpage">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Patient Page
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Manager">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="managerpage">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Practice Manager Page
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Receptionist">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="receptionistpage">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Receptionist Page
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
